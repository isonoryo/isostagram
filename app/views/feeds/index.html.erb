<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>投稿者</th>
      <th>コメント</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= image_tag feed.image.to_s %></td>
        <td><%= feed.user.name %></td>
        <td><%= feed.content %></td>
        <td><%= link_to '確認する', feed %></td>
        <td><%= link_to '編集する', edit_feed_path(feed) %></td>
        <td><%= link_to '削除する', feed, method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_feed_path %>
